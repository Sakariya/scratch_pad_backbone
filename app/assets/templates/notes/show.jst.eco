<header class='title-container'>
  <input type='text' class='note-title' value="<%= @note.get('title') %>" placeholder='Add title' />
</header>
<div class='body'>
  <textarea class='note-content' placeholder='Add content'><%= @note.get('content') %></textarea>
</div>
<div class='footer'>
  <button>Save</button>
</div>
<button class="destroy-note" tabindex="-1">Remove</button>
